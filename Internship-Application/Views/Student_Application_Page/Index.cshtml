<style>
    #gradientAudience {
        display: none;
    }

    #adminNavBar {
        display: none;
    }

    #commonNavBar {
        display: block;
    }

    button {
        background-color: #660000;
        color: white;
        padding: 5px;
        padding-left: 20px;
        padding-right: 20px;
        border: none;
        border-radius: 3px;
    }

    textarea {
        width: 1000px;
        height: 250px;
    }
</style>

<br />
<h1 style="text-align:center;"> Undergraduate Application Form</h1>
<br />
@model List<Internship_Application.Models.Forms>

<div style="box-shadow: 0px 0px 10px grey; border-radius: 3px; margin: 25pt; padding: 50pt;">

    <table class="table">
        @if (Model != null)
        {
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => Model[0].CreatedAt)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => Model[0].UpdatedAt)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => Model[0].StatusCodeId)
                    </th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreatedAt)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UpdatedAt)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.StatusCodeId)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id"> Edit </a> |
                            <a asp-action="Details" asp-route-id="@item.Id"> Details </a> |
                            <a asp-action="Delete" asp-route-id="@item.Id"> Delete </a>
                        </td>
                    </tr>
                }
            </tbody>
        }
        else
        {
            <tr>No applications found for user.Start by creating your first application</tr>
        }

    </table>

