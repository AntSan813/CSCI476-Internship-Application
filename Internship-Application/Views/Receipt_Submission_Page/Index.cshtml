<style>

    .border2 {
        margin: auto;
        width: 70%;
        border: 11px double #660000;
        padding: 50px;
        text-align: center;
        top: 50%;
        left: 50%;
        margin-bottom: 25px;
    }
</style>


<div>
    <fieldset>
        <div class="border2">
            <p>Thank you for submitting your application. A confirmation email will be sent to <b>@User.Identity.Name</b>.</p>
        </div>
    </fieldset>
</div>
@if (User.IsInRole("Student"))
{
    <form asp-controller="Receipt_Submission_Page_Student" asp-action="Index">
        <button type="submit"> Student-Submit </button>
    </form>
}
@if (User.IsInRole("Admin"))
{
    <form asp-controller="Receipt_Submission_Page_Admin" asp-action="Index">
        <button type="submit"> Admin-Submit</button>
    </form>
}

@if ((User.IsInRole("Employer")) || (User.IsInRole("StudentServices")) || (User.IsInRole("FacultyOfRec")))
{
    <form asp-controller="Receipt_Submission_Page_EmployerSSFor" asp-action="Index">
        <button type="submit"> Emply,SS,FoR-Submit</button>
    </form>
}
