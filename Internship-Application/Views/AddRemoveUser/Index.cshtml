<style>

    #gradientAudience {
        display: none;
    }

    #adminNavBar {
        display: block;
    }

    #commonNavBar {
        display: none;
    }

    #vl {
        border-left: 2px solid black;
        height: 42%;
        left: 50%;
        margin-left: -3px;
        top: 250pt;
        position: absolute;
    }

    label {
        display: block;
        padding-top: 20px;
    }

    input {
        display: block;
        padding: 5px;
    }

    #addUserButton, #removeUserButton, #submitAddButton, #submitRemoveButton {
        display: block;
        margin: 20px;
        padding: 10px;
        width: 150px;
        border-radius: 1em;
    }

    .activeStyle {
        background-color: #660000;
        color: white;
    }

    .disabledStyle {
        background-color: grey;
        color: black;
        opacity: .5;
    }

</style>

<div id="addRemoveUserUI">
<!-- Get user type and display appropriate nav bar -->
    <div style="box-shadow: 0px 0px 10px grey; border-radius: 3px; margin: 50px; margin-left: 50px; margin-right: 50px; padding: 25px;">
        <div id="vl"></div>
        <div class="row" style="height: 15%">
            <div style="display: block" class="col-6">
                <button style="float: right;" id="addUserButton" onclick="addUserClick()" disabled class="activeStyle">Add User</button>
            </div>
            <div class="col-6">
                <button id="removeUserButton" style="float: left" onclick="removeUserClick()" class="disabledStyle">Remove User</button>
            </div>
        </div>
        <div class="row" style="height: 60%">
            <div style="display: block;" class="col-6">
                <div style="display: block; padding-left: 250px;">
                    <label>WINTHROP EMAIL:</label>
                    <input id="addEmailInput" />
                    <label>WINTHROP ID:</label>
                    <input id="addWIDInput" />
                    <label>SELECT ROLE:</label>
                    <div>
                        <select id="addRoleInput" style="padding: 5pt;">
                            <option value="student">Student</option>
                            <option value="employer">Employer</option>
                            <option value="faculty">Faculty</option>
                            <option value="studentServices">Student Services</option>
                            <option value="admin">Administrator</option>
                        </select>
                    </div>
                </div>
            </div>
            <div style="display: block" class="col-6">
                <div style="display: block; padding-right: 250px; float: right;">
                    <label>WINTHROP EMAIL:</label>
                    <input id="removeEmailInput" disabled />
                </div>
            </div>
        </div>
        <div class="row" style="height: 15%; margin-bottom: 50pt;">
            <div style="display: block; padding-left: 250px; padding-top: 25px;" class="col-6">
                <button id="submitAddButton" class="activeStyle" onclick="submitAdd()">Submit</button>
            </div>
            <div class="col-6" style="padding-right: 250px; padding-top: 25px;">
                <button id="submitRemoveButton" style="float: right;" disabled class="disabledStyle" onclick="submitRemove">Submit</button>
            </div>
        </div>
    </div>
</div>

<script>

    function addUserClick() {
        var addUserButton = document.getElementById("addUserButton");
        if (!addUserButton.disabled) {
            toggleStyle("add");
        }
    }

    function removeUserClick() {
        var removeUserButton = document.getElementById("removeUserButton");
        if (!removeUserButton.disabled) {
            toggleStyle("remove");
        }
    }

    function toggleStyle(toggleString) {
        var addUserButton = document.getElementById("addUserButton");
        var submitAddButton = document.getElementById("submitAddButton");
        var removeUserButton = document.getElementById("removeUserButton");
        var submitRemoveButton = document.getElementById("submitRemoveButton");
        var addEmailInput = document.getElementById("addEmailInput");
        var addWIDInput = document.getElementById("addWIDInput");
        var addRoleInput = document.getElementById("addRoleInput");
        var removeEmailInput = document.getElementById("removeEmailInput");
        if (toggleString == "add") {
            addUserButton.className = "activeStyle";
            submitAddButton.className = "activeStyle";
            removeUserButton.className = "disabledStyle";
            submitRemoveButton.className = "disabledStyle";
            addUserButton.disabled = true;
            submitAddButton.disabled = false;
            removeUserButton.disabled = false;
            submitRemoveButton.disabled = true;

            addEmailInput.disabled = false;
            addWIDInput.disabled = false;
            addRoleInput.disabled = false;
            removeEmailInput.disabled = true;
        } else {
            addUserButton.className = "disabledStyle";
            submitAddButton.className = "disabledStyle";
            removeUserButton.className = "activeStyle";
            submitRemoveButton.className = "activeStyle";
            addUserButton.disabled = false;
            submitAddButton.disabled = true;
            removeUserButton.disabled = true;
            submitRemoveButton.disabled = false;

            addEmailInput.disabled = true;
            addWIDInput.disabled = true;
            addRoleInput.disabled = true;
            removeEmailInput.disabled = false;
        }
    } 

    function submitAdd() {
        console.log("Adding new user...");
    }

    function submitRemove() {
        console.log("Removing new user...");
    }

</script>
