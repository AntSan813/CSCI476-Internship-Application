@model Internship_Application.Models.Templates

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Templates</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TemplateName" class="control-label"></label><br />
                <small>Enter the name of this form (Ex. Spring2019):</small><br />
                <input asp-for="TemplateName" class="form-control" />
                <span asp-validation-for="TemplateName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DisplayName" class="control-label"></label><br />
                <small>Enter the name you want others to see (Ex. Winthrop Internship Application Form):</small><br />
                <input asp-for="DisplayName" class="form-control" />
                <span asp-validation-for="DisplayName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Disclaimer" class="control-label"></label><br />
                <small>Enter a disclaimer that will appear at the top of the form:</small><br />
                <input asp-for="Disclaimer" class="form-control" />
                <span asp-validation-for="Disclaimer" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    TODO: REMOVE. SHOULD NOT MAKE AN EMPTY FORM ACTIVE BECAUSE STUDENTS CAN ACCESS IT<br />
                    <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

